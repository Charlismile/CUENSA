@page "/instalaciones"
@using CUENSA.Repositories.Interfaces
@inject ICommon CommonService

<h3 class="mb-4">Gestión de Instalaciones</h3>

@if (!string.IsNullOrEmpty(StatusMessage))
{
    <div class="alert alert-@StatusMessageType">@StatusMessage</div>
}

<!-- Formulario de búsqueda -->
<div class="row mb-3">
    <div class="col-md-6">
        <input class="form-control"
               placeholder="Filtrar por nombre"
               value="@FilterNombre"
               @oninput="@(e => { FilterNombre = e.Value?.ToString() ?? ""; ApplyFilters(); })" />
    </div>
    <div class="col-md-6">
        <select class="form-select"
                value="@FilterNivel"
                @onchange="@(e => { FilterNivel = e.Value?.ToString() ?? ""; ApplyFilters(); })">
            <option value="">Todos los niveles</option>
            <option value="I NIVEL">I NIVEL</option>
            <option value="II NIVEL">II NIVEL</option>
            <option value="III NIVEL">III NIVEL</option>
        </select>
    </div>
</div>

<div class="mb-2">
    <button class="btn btn-secondary btn-sm" @onclick="ClearFilters">Limpiar filtros</button>
</div>

<!-- Tabla de instalaciones filtradas -->
<div class="card">
    <div class="card-header">Lista de Instalaciones</div>
    <div class="card-body table-responsive">
        @if (FilteredInstalaciones.Any())
        {
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Nivel</th>
                        <th>Tipo</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in FilteredInstalaciones)
                    {
                        <tr>
                            <td>@item.NombreInstalacion</td>
                            <td>@item.NivelInstalacion</td>
                            <td>@item.TipoInstalacion</td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-warning me-2" @onclick="() => StartEdit(item)">Editar</button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteInstalacion(item.InstalacionId)">Eliminar</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No se encontraron instalaciones.</p>
        }
    </div>
</div>

<!-- Modal de edición -->
@if (EditingInstalacion != null)
{
    <div class="modal fade show d-block" style="background-color:rgba(0,0,0,0.5);" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Editar Instalación</h5>
                    <button type="button" class="btn-close" @onclick="CancelEdit"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="EditingInstalacion" OnValidSubmit="SaveEdit">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger" />

                        <div class="mb-3">
                            <label class="form-label">Nombre</label>
                            <InputText class="form-control" @bind-Value="EditingInstalacion.NombreInstalacion" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Nivel</label>
                            <InputText class="form-control" @bind-Value="EditingInstalacion.NivelInstalacion" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Tipo</label>
                            <InputText class="form-control" @bind-Value="EditingInstalacion.TipoInstalacion" />
                        </div>

                        <button type="submit" class="btn btn-success">Guardar</button>
                        <button type="button" class="btn btn-secondary ms-2" @onclick="CancelEdit">Cancelar</button>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}
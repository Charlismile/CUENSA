@page "/reportes"
@using CUENSA.Models.Entities.BdSicuensa
@inject CUENSA.Repositories.Interfaces.ICommon CommonServices

<div class="container-fluid py-4">
    <!-- Header con gradiente -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="header-banner rounded-4 p-4 text-white position-relative overflow-hidden">
                <div class="position-absolute top-0 start-0 w-100 h-100 opacity-10">
                    <svg viewBox="0 0 100 100" class="w-100 h-100">
                        <defs>
                            <pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse">
                                <path d="M 10 0 L 0 0 0 10" fill="none" stroke="white" stroke-width="0.5"/>
                            </pattern>
                        </defs>
                        <rect width="100" height="100" fill="url(#grid)" />
                    </svg>
                </div>
                <div class="position-relative">
                    <h1 class="display-5 fw-bold mb-2">📊 Reportes de Instalaciones</h1>
                    <p class="lead mb-0 opacity-90">Panel de control y análisis de clasificaciones SHA</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Tarjetas de métricas -->
    <div class="row mb-5 g-4">
        <div class="col-md-6 col-xl-3">
            <div class="metric-card h-100">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="metric-icon bg-primary">
                            <i class="fas fa-building"></i>
                        </div>
                        <div class="ms-3 flex-grow-1">
                            <h6 class="text-muted mb-1 small">Total Instalaciones</h6>
                            <h3 class="mb-0 fw-bold text-primary">@totalInstalaciones</h3>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="progress progress-sm">
                            <div class="progress-bar bg-primary" style="width: 100%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-xl-3">
            <div class="metric-card h-100">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="metric-icon bg-success">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <div class="ms-3 flex-grow-1">
                            <h6 class="text-muted mb-1 small">Clasificaciones SHA</h6>
                            <h3 class="mb-0 fw-bold text-success">@totalClasificaciones</h3>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="progress progress-sm">
                            <div class="progress-bar bg-success" style="width: 85%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-xl-3">
            <div class="metric-card h-100">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="metric-icon bg-info">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <div class="ms-3 flex-grow-1">
                            <h6 class="text-muted mb-1 small">Promedio</h6>
                            <h3 class="mb-0 fw-bold text-info">@(totalInstalaciones > 0 ? (totalClasificaciones * 100 / totalInstalaciones).ToString("F1") : "0")%</h3>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="progress progress-sm">
                            <div class="progress-bar bg-info" style="width: @(totalInstalaciones > 0 ? (totalClasificaciones * 100 / totalInstalaciones) : 0)%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-xl-3">
            <div class="metric-card h-100">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="metric-icon bg-warning">
                            <i class="fas fa-cogs"></i>
                        </div>
                        <div class="ms-3 flex-grow-1">
                            <h6 class="text-muted mb-1 small">Estado</h6>
                            <h3 class="mb-0 fw-bold text-warning">Activo</h3>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="progress progress-sm">
                            <div class="progress-bar bg-warning" style="width: 75%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de Instalaciones -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="data-table-container">
                <div class="table-header">
                    <h4 class="mb-0 d-flex align-items-center">
                        <i class="fas fa-table me-2 text-primary"></i>
                        Instalaciones Registradas
                    </h4>
                    <div class="table-actions">
                        <button class="btn btn-outline-primary btn-sm me-2">
                            <i class="fas fa-download me-1"></i>Exportar
                        </button>
                        <button class="btn btn-primary btn-sm">
                            <i class="fas fa-plus me-1"></i>Nueva
                        </button>
                    </div>
                </div>

                <div class="table-responsive">
                    <table id="instalacionesTable" class="modern-table">
                        <thead>
                        <tr>
                            <th class="sortable">
                                <span>ID</span>
                                <i class="fas fa-sort ms-1"></i>
                            </th>
                            <th class="sortable">
                                <span>Nombre Instalación</span>
                                <i class="fas fa-sort ms-1"></i>
                            </th>
                            <th class="sortable">
                                <span>Tipo Instalación</span>
                                <i class="fas fa-sort ms-1"></i>
                            </th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var i in instalaciones)
                        {
                        <tr class="table-row">
                            <td>
                                <span class="badge bg-light text-dark fw-normal">#@i.InstalacionId</span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="installation-icon me-2">
                                        <i class="fas fa-building-columns"></i>
                                    </div>
                                    <strong>@i.NombreInstalacion</strong>
                                </div>
                            </td>
                            <td>
                                <span class="type-badge">@i.TipoInstalacion</span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button class="btn btn-sm btn-outline-primary" title="Ver detalles">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-secondary" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Clasificaciones SHA -->
    <div class="row">
        <div class="col-12">
            <div class="data-table-container">
                <div class="table-header">
                    <h4 class="mb-0 d-flex align-items-center">
                        <i class="fas fa-shield-alt me-2 text-success"></i>
                        Clasificaciones SHA
                    </h4>
                    <div class="table-actions">
                        <button class="btn btn-outline-success btn-sm me-2">
                            <i class="fas fa-chart-pie me-1"></i>Gráfico
                        </button>
                        <button class="btn btn-success btn-sm">
                            <i class="fas fa-sync me-1"></i>Actualizar
                        </button>
                    </div>
                </div>

                <div class="table-responsive">
                    <table id="shaTable" class="modern-table">
                        <thead>
                        <tr>
                            <th class="sortable">
                                <span>Tipo SHA</span>
                                <i class="fas fa-sort ms-1"></i>
                            </th>
                            <th class="sortable">
                                <span>Total Registros</span>
                                <i class="fas fa-sort ms-1"></i>
                            </th>
                            <th>Porcentaje</th>
                            <th>Estado</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in clasificacionesSha)
                        {
                        <tr class="table-row">
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="sha-indicator me-2"></div>
                                    <strong>@item.Key</strong>
                                </div>
                            </td>
                            <td>
                                <span class="count-badge">@item.Value</span>
                            </td>
                            <td>
                                @{
                                var percentage = totalClasificaciones > 0 ? (item.Value * 100.0 / totalClasificaciones) : 0;
                                }
                                <div class="d-flex align-items-center">
                                    <div class="progress flex-grow-1 me-2" style="height: 8px;">
                                        <div class="progress-bar bg-success" style="width: @percentage%"></div>
                                    </div>
                                    <span class="small text-muted">@percentage.ToString("F1")%</span>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-success">Activo</span>
                            </td>
                        </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .header-banner {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.18);
    }

    .metric-card {
        background: rgba(255, 255, 255, 0.95);
        border: none;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
    }

    .metric-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 40px rgba(0, 0, 0, 0.12);
    }

    .metric-icon {
        width: 56px;
        height: 56px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 24px;
    }

    .progress-sm {
        height: 4px;
        border-radius: 2px;
        background-color: rgba(0, 0, 0, 0.1);
    }

    .data-table-container {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    .table-header {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        padding: 20px 24px;
        border-bottom: 1px solid #e9ecef;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .table-actions {
        display: flex;
        gap: 8px;
    }

    .modern-table {
        width: 100%;
        margin: 0;
        border-collapse: separate;
        border-spacing: 0;
    }

    .modern-table thead th {
        background: #f8f9fa;
        color: #495057;
        font-weight: 600;
        padding: 16px 20px;
        border: none;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .modern-table thead th.sortable {
        cursor: pointer;
        user-select: none;
        transition: all 0.2s ease;
    }

    .modern-table thead th.sortable:hover {
        background: #e9ecef;
        color: #007bff;
    }

    .modern-table tbody td {
        padding: 16px 20px;
        border-bottom: 1px solid #f1f3f4;
        vertical-align: middle;
    }

    .table-row {
        transition: all 0.2s ease;
    }

    .table-row:hover {
        background-color: #f8f9ff;
        transform: scale(1.01);
    }

    .installation-icon {
        width: 32px;
        height: 32px;
        background: linear-gradient(135deg, #007bff, #0056b3);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 14px;
    }

    .sha-indicator {
        width: 12px;
        height: 12px;
        background: linear-gradient(135deg, #28a745, #20c997);
        border-radius: 50%;
        box-shadow: 0 0 0 3px rgba(40, 167, 69, 0.2);
    }

    .type-badge {
        background: linear-gradient(135deg, #6f42c1, #e83e8c);
        color: white;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 500;
    }

    .count-badge {
        background: linear-gradient(135deg, #17a2b8, #138496);
        color: white;
        padding: 4px 8px;
        border-radius: 12px;
        font-size: 12px;
        font-weight: 600;
    }

    .action-buttons {
        display: flex;
        gap: 4px;
    }

    .action-buttons .btn {
        width: 32px;
        height: 32px;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .table-header {
            flex-direction: column;
            gap: 12px;
            text-align: center;
        }

        .table-actions {
            justify-content: center;
        }

        .modern-table {
            font-size: 14px;
        }

        .modern-table thead th,
        .modern-table tbody td {
            padding: 12px 16px;
        }
    }

    /* Animaciones suaves */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .metric-card {
        animation: fadeInUp 0.6s ease forwards;
    }

    .data-table-container {
        animation: fadeInUp 0.8s ease forwards;
    }
</style>

@code {
    private int totalInstalaciones;
    private int totalClasificaciones;

    private List<TbInstalacion> instalaciones = new();
    private Dictionary<string, int> clasificacionesSha = new();

    protected override async Task OnInitializedAsync()
    {
        totalInstalaciones = await CommonServices.GetTotalInstalacionesAsync();
        totalClasificaciones = await CommonServices.GetTotalClasificacionesAsync();
    
        // Obtener lista completa de instalaciones con provincia
        instalaciones = await LoadInstalacionesAsync();
    
        // Clasificaciones SHA
        clasificacionesSha = await CommonServices.GetClasificacionesShaAsync();
    }

    private async Task<List<TbInstalacion>> LoadInstalacionesAsync()
    {
        // Ajusta según tu modelo real
        var list = await CommonServices.GetInstalacionesPorProvinciaAsync();
        return list.Select((kv, idx) => new TbInstalacion
        {
            InstalacionId = idx + 1,
            NombreInstalacion = kv.Key,
            TipoInstalacion = kv.Value.ToString()
            }).ToList();
    }
}